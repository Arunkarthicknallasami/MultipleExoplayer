<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:id="@+id/parentFrame"
        tools:context=".MainActivity">

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:controller_layout_id="@layout/exomediacontroller"
            android:background="#000000"
    />
    <RelativeLayout
            android:id="@+id/playerDummyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></RelativeLayout>
    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView2"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_180sdp"
            app:use_controller="false"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:layout_marginRight="20dp"
    />
    <RelativeLayout
            android:id="@+id/player2DummyView"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"></RelativeLayout>

</FrameLayout>